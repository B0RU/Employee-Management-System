<head>
    <link rel="stylesheet" href="../fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="../CSS/style.css">
</head>

<div class="main">

    <div class="container">
        <form method="POST" action="/user/login" class="appointment-form" id="appointment-form">
            <h2>Login</h2>
            {{#if error}}
            <div class="alert alert-danger">{{error}}, <a href="/user/register">Register</a> </div>
            {{/if}}
            {{#if success}}
            <div class="alert alert-success">{{success}}</div>
            {{/if}}
            <div class="form-group-1">

                <input type="email" name="email" id="email" placeholder="Email" required />
                <input type="password" name="password" id="password" placeholder="Password" required />

            </div>

            <div class="form-submit">
                <input type="submit" name="submit" id="submit" class="submit" value="Login" />
            </div>
        </form>
    </div>

</div>

<!-- JS -->
<script src="../vendor/jquery/jquery.min.js"></script>